<dialog id="modal" class="outline-none border-none rounded-xl">
    <div class="flex items-center justify-center bg-inherit max-h-[1000px] max-w-[1000px]">
        <img id="modalImage" src="" alt="" class="w-full h-full object-contain" />
    </div>
</dialog>
<script>
    const modal = document.querySelector("#modal");
    const modalImage = document.querySelector("#modalImage");
    const images = document.querySelectorAll(".highlights");

    images.forEach((img) => {
        img.addEventListener("click", () => {
            modalImage.src = img.src;
            modal.showModal();
        });
    });

    modal.addEventListener("click", (event) => {
        if (event.target === modal) {
            modalImage.src = "";
            modal.close();
        }
    });
</script>
