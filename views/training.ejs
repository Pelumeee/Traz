<script>
    document.querySelectorAll(".training-cards").forEach((button) => {
        button.addEventListener("click", function () {
            document.querySelectorAll(".training-cards").forEach((btn) => {
                btn.classList.remove("active");
            });
            this.classList.add("active");
            document.querySelectorAll(".training-images > img").forEach((card) => {
                if (card.id === this.id) {
                    card.classList.remove("hidden");
                } else {
                    card.classList.add("hidden");
                }
            });
        });
    });
</script>
